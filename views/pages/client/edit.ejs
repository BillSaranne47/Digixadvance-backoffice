<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Edit client Info</div>
            </div>
            <form action="/clients/<%= client.id %>/updateClientInfo" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="name">Scoring</label>
                                <input type="text" class="form-control" id="name" name="scoring" placeholder="Enter a new scoring" />
                            </div>
                           
                        </div>
                        
                    </div>
                </div>
                <div class="card-action">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-danger" href="/bank/list">Cancel</a>
                </div>
            </form>
            
        </div>
    </div>
</div>