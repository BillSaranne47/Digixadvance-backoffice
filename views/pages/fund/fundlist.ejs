<div class="row">
  <div class="col-md-12">
    
    <div class="card">
      <div class="card-header">
        <div class="d-flex align-items-center">
          <h4 class="card-title">Fund List</h4>
          <% if (user.bank_id) { %>
          <button class="btn btn-primary btn-round ms-auto" data-bs-toggle="modal" data-bs-target="#addFundModal">
            <i class="fas fa-plus me-1"></i>
            Add Fund
          </button>
          <% } %>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table id="page-length" class="display table dataTable">
            <thead>
              <tr>
                <th class="table-plus">#</th>
                <% if (user && user.bank_id) { %>
                  <th>Remaining Amount</th>
                  <th>Used Amount</th>
                  <th>Pending Amount</th>
                <% } else { %>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Created</th>
                  <th>Updated</th>
                  <th>Activate</th>
                <% } %>
              </tr>
            </thead>
            <tbody>
              <% if (bankFund.length > 0) { %>
                <% bankFund.forEach((bank, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <% if (user && user.bank_id) { %>

                      <td><%= Number(bank.remaining_amount).toLocaleString('en-US') %> XAF</td>
                      <td><%= Number(bank.used_amount).toLocaleString('en-US') %> XAF</td>
                      
                      <td><%= Number(bank.blocked_amount).toLocaleString('en-US') %> XAF</td>

                    <% } else { %>

                      <td><%= Number(bank.amount).toLocaleString('en-US') %> XAF</td>
                      <td>
                        <% if (bank.status === 'APPROVED') { %>
                          <span class="badge badge-success">APPROVED</span>
                        <% } else if (bank.status === 'PENDING') { %>
                          <span class="badge badge-warning">PENDING</span>
                        <% } else if (bank.status === 'FAILED') { %>
                          <span class="badge badge-danger">FAILED</span>
                        <% } else { %>
                          <span class="badge badge-secondary"><%= bank.status %></span>
                        <% } %>
                      </td>
                      <td><%= formatDate(bank.createdAt) %></td>
                      <td><%= formatDate(bank.updatedAt) %></td>
                      <td>
                        <form action="/funds/<%= bank.id %>/activatefund" method="POST">
                          <input type="hidden" name="id" value="<%= bank.id %>" />
                          <input type="hidden" name="amount" value="<%= bank.amount %>" />
                          <% 
                            let btnClass = 'btn-sm ';
                            let disabled = '';
                            if (bank.status === 'BLOCKED') {
                              btnClass += 'btn-warning';
                            } else if (bank.status === 'PENDING') {
                              btnClass += 'btn-primary';
                              disabled = 'disabled';
                            } else if (bank.status === 'APPROVED') {
                              btnClass += 'btn-success';
                              disabled = 'disabled';
                            } else if (bank.status === 'FAILED') {
                              btnClass += 'btn-danger';
                              disabled = 'disabled';
                            } else {
                              btnClass += 'btn-secondary';
                              disabled = 'disabled';
                            }
                          %>
                          <button type="submit" class="btn <%= btnClass %>" <%= disabled %> title="Activate">
                            Activate
                          </button>
                        </form>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="8" class="text-center text-muted">No fund found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Add fund Modal -->
<div class="modal fade" id="addFundModal" tabindex="-1" aria-labelledby="addFundModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/funds/addFund" method="post" id="addFundForm">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addFundModalLabel">Add New Fund</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="form-group mb-3">
            <label for="name">Phone Number</label>
            <div class="input-group">
              <span class="input-group-text">+237</span>
              <input type="tel" class="form-control" id="tel" name="msisdn" placeholder="Phone Number" required />
            </div>
          </div>

          <div class="form-group mb-3">
            <label for="amount">Amount</label>
            <input type="text" class="form-control" id="amount"  name="amount" placeholder="Amount" required />
          </div>

          <div class="form-group mb-3">
            <label for="desc">Description</label>
            <textarea class="form-control" name="description" placeholder="Description"></textarea>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" id="submitBtn">
            <span id="submitBtnText">Submit</span>
            <span id="submitBtnSpinner" class="spinner-border spinner-border-sm d-none" role="status"
              aria-hidden="true"></span>
          </button>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
            Cancel
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- spinner -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const amountInput = document.getElementById('amount');
    const addFundForm = document.getElementById('addFundForm');

    // Format number with thousand separators
    amountInput.addEventListener('input', function (e) {
      let value = e.target.value.replace(/[^0-9]/g, ''); // Remove non-digits
      if (value) {
        const num = parseInt(value, 10);
        if (!isNaN(num)) {
          e.target.value = num.toLocaleString('en-US'); // Add thousand separators
        } else {
          e.target.value = ''; // Clear invalid input
        }
      }
    });

    // Clean the amount before form submission
    addFundForm.addEventListener('submit', function (e) {
      const submitBtn = document.getElementById('submitBtn');
      const btnText = document.getElementById('submitBtnText');
      const btnSpinner = document.getElementById('submitBtnSpinner');

      // Remove commas from amount for submission
      const rawValue = amountInput.value.replace(/,/g, '');
      amountInput.value = rawValue;

      // Activate loader
      submitBtn.disabled = true;
      btnText.textContent = 'Submitting...';
      btnSpinner.classList.remove('d-none');
    });
  });
</script>